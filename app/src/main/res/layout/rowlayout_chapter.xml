<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#ff55aa55">

        <TextView android:id="@+id/rowlayout_chapter_number"
            android:text="99"
            android:textSize="80sp"
            android:textColor="#EEEEEE"
            android:shadowColor="#999999"
            android:shadowDx="1"
            android:shadowDy="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:background="#ff99ff99"
        android:layout_marginTop="10dp"
        android:padding="10dp">

        <TextView android:id="@+id/rowlayout_chapter_title"
            android:text="%Title%"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView android:id="@+id/rowlayout_chapter_description"
            android:text="%Description goes here%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rowlayout_chapter_title"
            android:layout_alignLeft="@+id/rowlayout_chapter_title"
            android:layout_alignStart="@+id/rowlayout_chapter_title" />
    </RelativeLayout>
    </LinearLayout>

</LinearLayout>